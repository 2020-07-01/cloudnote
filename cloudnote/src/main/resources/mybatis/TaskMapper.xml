<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.mapper.TaskMapper">

    <sql id="base_sql">
        task_id,user_id,task_content,send_time,create_time,update_time,other,
    </sql>

    <resultMap id="baseMap" type="com.entity.Task">
        <id column="task_id" property="task_id" jdbcType="INTEGER"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="task_content" property="taskContent" jdbcType="INTEGER"/>
        <result column="send_time" property="sendTime" jdbcType="VARCHAR"/>
        <result column="create_time" property="createTime" jdbcType="VARCHAR"/>
        <result column="update_time" property="updateTime" jdbcType="VARCHAR"/>
        <result column="other" property="other" jdbcType="VARCHAR"/>
    </resultMap>

