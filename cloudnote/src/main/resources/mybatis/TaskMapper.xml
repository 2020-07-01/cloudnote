    <insert id="insert" parameterType="com.entity.Task">
        insert into task (task_id,user_id,send_time,create_time)
        value (
            #{taskId,jdbcType=INTEGER},
            #{userId,jdbcType=INTEGER},
            #{sendTime,jdbcType=VARCHAR},
            now())
    </insert>

