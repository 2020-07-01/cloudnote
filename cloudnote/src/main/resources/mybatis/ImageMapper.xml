<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.mapper.ImageMapper">

    <sql id="base_sql">
        image_id,user_id,image_name,image_type,image_size,create_time,image_path,image_url,expire_date,whole_name,is_recycle
    </sql>

    <resultMap id="baseMap" type="com.entity.Image">
        <id column="image_id" property="imageId" jdbcType="INTEGER"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="image_name" property="imageName" jdbcType="INTEGER"/>
        <result column="image_type" property="imageType" jdbcType="VARCHAR"/>
        <result column="image_size" property="imageSize" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="VARCHAR"/>
        <result column="image_path" property="imagePath" jdbcType="VARCHAR"/>
        <result column="image_url" property="imageUrl" jdbcType="VARCHAR"/>
        <result column="expire_date" property="imageDate" jdbcType="VARCHAR"/>
        <result column="whole_name" property="wholeName" jdbcType="VARCHAR"/>
        <result column="is_recycle" property="isRecycle" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="selectImageUrl" parameterType="java.lang.Integer" resultType="java.lang.String">
         select
            image_url
         from image
         where image_id = #{imageId,jdbcType=INTEGER}
     </select>

    <insert id="insertImage" parameterType="com.entity.Image">
        insert into image(user_id,image_name,image_type,image_size,image_path,whole_name,create_time)
        value (
        #{userId,jdbcType=INTEGER},
        #{imageName,jdbcType=VARCHAR},
        #{imageType,jdbcType=VARCHAR},
        #{imageSize,jdbcType=BIGINT},
        #{imagePath,jdbcType=INTEGER},
        #{wholeName,jdbcType=VARCHAR},
        now())
    </insert>

    <select id="selectImageList" parameterType="java.lang.Integer" resultType="com.entity.Image" resultMap="baseMap">
        select  image_id,image_name,image_path,whole_name
        from image
        where user_id = #{userId,jdbcType=INTEGER} and is_recycle = '0'
    </select>


    <update id="updateImage" parameterType="com.entity.Image">
         update image
         set    image_url = #{imageUrl,jdbcType=VARCHAR},
                expire_date = #{expireDate,jdbcType=VARCHAR}
         where image_id = #{imageId,jdbcType=INTEGER}
     </update>

    <select id="selectImageByCondition" parameterType="com.entity.Condition" resultType="com.entity.Image"
            resultMap="baseMap">
        select  image_id
        from image
        where user_id = #{userId,jdbcType=INTEGER} and image_name = #{imageName,jdbcType=VARCHAR} and is_recycle = #{isRecycle,jdbcType=VARCHAR}
    </select>


    <update id="updateIsRecycle" parameterType="com.entity.Condition">
         update image
         set is_recycle = #{isRecycle,jdbcType=VARCHAR}
         where image_id = #{imageId,jdbcType=INTEGER}
     </update>

    <select id="selectImageByKey" parameterType="com.entity.Condition" resultType="com.entity.Image"
            resultMap="baseMap">
        select  image_id,image_name,image_path,whole_name
        from image
        where user_id = #{userId,jdbcType=INTEGER} and is_recycle = '0' and whole_name  like  "%"#{key,jdbcType=VARCHAR}"%"
    </select>

    <!--
         <delete id="deleteNotesById" parameterType="java.util.List">
             delete from note
             where note_id in
             <foreach collection="collection" item="item" open="(" separator="," close=")">
                 #{item,jdbcType=INTEGER}
             </foreach>
         </delete>

         <update id="updateNote" parameterType="com.entity.Note">
             update note
             set note_content = #{noteContent,jdbcType=VARCHAR}, update_time = now(),note_title = #{noteTitle,jdbcType=VARCHAR},note_type=#{noteType,jdbcType=INTEGER}
             where note_id = #{noteId,jdbcType=INTEGER}
         </update>-->
</mapper>
