<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.mapper.ImageMapper">

    <sql id="base_sql">
        image_id,user_id,image_name,image_type,image_size,create_time,image_path,image_url,expire_date
    </sql>

    <resultMap id="baseMap" type="com.entity.Image">
        <id column="image_id" property="imageId" jdbcType="INTEGER"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="image_name" property="imageName" jdbcType="INTEGER"/>
        <result column="image_type" property="imageType" jdbcType="VARCHAR"/>
        <result column="image_size" property="imageSize" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="VARCHAR"/>
        <result column="image_path" property="imagePath" jdbcType="VARCHAR"/>
        <result column="image_url" property="imageUrl" jdbcType="VARCHAR"/>
        <result column="expire_date" property="imageDate" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="selectImageUrl" parameterType="java.lang.Integer" resultType="java.lang.String">
         select
            image_url
         from image
         where image_id = #{imageId,jdbcType=INTEGER}
     </select>

    <insert id="insertImage" parameterType="com.entity.Image">
        insert into image(user_id,image_name,image_type,image_size,image_path,create_time)
        value (
        #{userId,jdbcType=INTEGER},
        #{imageName,jdbcType=VARCHAR},
        #{imageType,jdbcType=VARCHAR},
        #{imageSize,jdbcType=BIGINT},
        #{imagePath,jdbcType=INTEGER},
        now())
    </insert>

    <select id="selectImageList" parameterType="java.lang.Integer" resultType="com.entity.Image" resultMap="baseMap">
        select  image_id,image_name,image_path
        from image
        where user_id = #{userId,jdbcType=INTEGER}
    </select>

     <update id="updateImage" parameterType="com.entity.Image">
         update image
         set    image_url = #{imageUrl,jdbcType=VARCHAR},
                expire_date = #{expireDate,jdbcType=VARCHAR}
         where image_id = #{imageId,jdbcType=INTEGER}
     </update>

    <select id="selectImageByCondition" parameterType="com.entity.Condition" resultType="com.entity.Image" resultMap="baseMap">
        select  image_id
        from image
        where user_id = #{userId,jdbcType=INTEGER} and image_name = #{imageName,jdbcType=VARCHAR}
    </select>




