    <select id="getAccountList" parameterType="com.entity.Condition" resultMap="baseMap1">
        select
        <include refid="base_sql1"/>
        from account
        where
        1=1
        <if test="accountName != '' and accountName != null">
            and account_name = #{accountName,jdbcType=VARCHAR}
        </if>
        <if test="email != '' and email != null">
            and email = #{email,jdbcType=VARCHAR}
        </if>
        <if test="phone != '' and phone != null">
            and phone = #{phone,jdbcType=VARCHAR}
        </if>
        <if test="startNumber != null and endNumber != ''">
            ORDER BY create_time desc
            limit #{startNumber},#{endNumber};
        </if>
    </select>

    <!--查询总数-->
