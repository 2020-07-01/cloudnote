        <result column="create_time" property="createTime" jdbcType="VARCHAR"/>
        <result column="is_online" property="isOnline" jdbcType="VARCHAR"/>
        <result column="last_login_time" property="lastLoginTime" jdbcType="VARCHAR"/>
        <result column="is_locked" property="isLocked" jdbcType="VARCHAR"/>
        <result column="login_count" property="loginCount" jdbcType="INTEGER"/>
    </resultMap>

    <sql id="base_sql1">
        account_id,account_name,email,phone,create_time,is_online,
        is_locked,login_count,birthday,area,sex,last_login_time
    </sql>

